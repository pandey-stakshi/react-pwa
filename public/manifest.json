{
  "name": "PWA Stakshi",
  "short_name": "PWA Demo",
  "description": "A Progressive Web App installation demo",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#4F46E5",
  "orientation": "portrait-primary",
  "icons": [
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+pwa",
      "url": "/?source=%s"
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "/manifest.json"
    }
  ]
}
